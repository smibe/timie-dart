{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "flutter",
    "isShellCommand": true,
    "echoCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "flutter:build",
            "suppressTaskName": true,
            "args": [
                "build"
            ]
        },
        {
            "taskName": "flutter:test",
            "suppressTaskName": true,
            "args": [
                "test",
                "${file}"
            ]
        }
    ]
}